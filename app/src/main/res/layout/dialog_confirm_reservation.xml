<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="275dp"
              android:layout_height="200dp" android:paddingTop="10dp">

    <ImageView
            android:layout_width="88dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/app_name"
            android:layout_height="83dp"

            app:srcCompat="@drawable/ic_checked" android:layout_marginBottom="15dp"/>

    <TextView
            android:text="¿Confirmar reservación?"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"

            android:paddingTop="5dp" android:paddingBottom="5dp" android:textSize="18sp"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center|left"
                android:text="Cancel"
                android:layout_margin="5dp"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonCancel"
                android:layout_height="35dp" android:textColor="@color/common_google_signin_btn_text_light"
                android:background="@color/colorGris"/>
        android:textColor="@color/colorBlanco"
        <Button
                android:layout_width="wrap_content"
                android:layout_gravity="center|right"
                android:text="Confirmar"
                android:layout_margin="5dp"
                android:textStyle="bold"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/buttonConfirmar"
                android:layout_height="35dp" android:background="@color/colorPrimero"
                android:textColor="@color/colorBlanco" android:paddingRight="3dp" android:paddingLeft="3dp"/>
    </FrameLayout>
</LinearLayout>