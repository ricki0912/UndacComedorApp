<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginBottom="2dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:gravity="center">
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp" app:srcCompat="@drawable/cena"
                    android:id="@+id/imageViewEmpty" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="Almuerzo de jueves, 07-11-2017"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewTitlePendingMenu"
                    android:textColor="@color/colorNegro" android:textSize="15sp"
                    android:gravity="fill" android:hapticFeedbackEnabled="false" android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" android:textStyle="bold" android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
            <TextView
                    android:text="Activo hasta 2018/12/12 12:12pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewDateReserPendingMenu"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textViewStatePendingMenu"
                    android:layout_weight="1"
                    tools:text="Hast tu reserva de una vez" android:paddingLeft="4dp" android:paddingRight="4dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>