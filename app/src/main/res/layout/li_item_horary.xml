<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

    >

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textViewIdHorary" android:layout_weight="1"
            android:textSize="1dp"/>
    <android.support.v7.widget.CardView


            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_margin="8dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="20dp" android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp" android:layout_marginTop="8dp"><![CDATA[
    >

    ]]>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorBlanco"
                android:weightSum="2"
                android:layout_marginRight="16dp">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.8"
                    android:orientation="vertical"
                    android:gravity="center"

            >
                <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/hora"
                ></View>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Horarios"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12:00pm a 12:20pm"

                        android:id="@+id/textViewHoraOpcReser"/>

            </LinearLayout>


            <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/colorPrimary">

            </View>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.7"
                    android:orientation="vertical"
                    android:gravity="center"

            >
                <View
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/grupo"
                ></View>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Reservado"
                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0 de (total)"

                        android:id="@+id/textViewCantDeTotalReser"/>

            </LinearLayout>
            <View
                    android:layout_width="1.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="9dp"
                    android:background="@color/colorPrimary">

            </View>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center"

            >
                <ToggleButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/toggle_button_time_reservation"
                        android:textOff=" " android:textOn=" " android:id="@+id/toggleButtonReser"

                />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

