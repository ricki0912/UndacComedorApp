<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
>
    <TextView
            android:text="Titulo de la noticia "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewTitleLastNews"
            android:textColor="@color/colorNegro" android:textSize="15sp"
            android:gravity="fill" android:hapticFeedbackEnabled="false" android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" android:textStyle="bold" android:layout_marginTop="5dp"/>
    <TextView
            android:text="2018/12/12 12:12pm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDatePubLastNews"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>
    <com.codesgood.views.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="corre@fasdf.com  www.hola.com No has conocido ningún paraíso ni ningún infierno. Aquí no hay felicidad ni castigo mi familia ni enemigos. Levántate en paz. Aquí acaban las palabras, como el pensamiento. Ésta ha sido tu última ilusión."
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:textColor="@color/colorNegroClaro"

            android:id="@+id/justifiedTextViewDescriptionLastNews" android:layout_weight="1"
            android:layout_marginLeft="4dp" android:layout_marginBottom="8dp" android:autoLink="web|phone|map|email"/>
</LinearLayout>