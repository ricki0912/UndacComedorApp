<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical" android:background="@color/colorGrisClaro">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingTop="8dp"/>
    <android.support.v7.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/side_nav_bar"
            android:padding="5dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/graylight"
            android:outlineSpotShadowColor="@color/colorPrimero"
            app:cardCornerRadius="5dp" android:layout_marginBottom="8dp" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="0dp" android:id="@+id/cardViewMenuDay">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2" android:gravity="top" android:layout_height="100dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:layout_margin="3dp"
                            android:background="@color/colorPrimero" android:id="@+id/linearLayoutDialIMenuDay"
                            android:weightSum="2">
                        <TextView
                                android:text="20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="24sp"
                                android:id="@+id/textViewDiaMesLiMenuDay" android:textColor="@color/colorBlanco"
                                android:layout_weight="0.3"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:layout_weight="1.1"
                                android:gravity="center|top">
                            <TextView
                                    android:text="Lunes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlanco"
                                    android:id="@+id/textViewDiaSemanaLiMenuDay"/>
                            <TextView
                                    android:text="Octubre"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorBlanco"
                                    android:id="@+id/textViewNameMonthLiMenu" android:gravity="center|top"/>
                        </LinearLayout>
                        <TextView
                                android:text="2002"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="22sp"
                                android:id="@+id/textViewYearLiMenu" android:textColor="@color/colorBlanco"
                                android:layout_weight="0.6"/>
                    </LinearLayout>
                    <View
                            android:id="@+id/divider5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="?android:attr/listDivider"
                            android:layout_weight="1"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:weightSum="2" android:gravity="center"
                                android:layout_marginBottom="2dp">
                            <TextView
                                    android:text="12:00pm a 12:20pm"
                                    android:layout_width="209dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewStateHoraryOfReserMenuDay"
                                    android:textSize="12sp" android:layout_weight="1.5" android:gravity="center"/>
                            <RelativeLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp" android:gravity="center">

                                <TextView
                                        android:text="F"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp" android:id="@+id/textViewIconAssist"
                                        android:gravity="center" android:textStyle="bold"
                                        android:textColor="@color/white" android:background="@drawable/icon_missing"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:weightSum="2" android:gravity="center"
                                android:layout_marginTop="2dp" android:layout_marginBottom="2dp">
                            <TextView
                                    android:text=" JUSTIFICACIÓN ENVIADA"
                                    android:layout_width="201dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewStateJustificationMenuDay"
                                    android:textSize="12sp" android:layout_weight="1.5" android:gravity="center"
                                    android:textStyle="bold"/>
                            <RelativeLayout
                                    android:layout_width="25dp"
                                    android:layout_height="25dp">

                                <TextView
                                        android:text="JP"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp" android:id="@+id/textViewIconJustification"
                                        android:background="@drawable/icon_pending" android:gravity="center"
                                        android:textColor="@color/colorNegro" android:textStyle="bold"/>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.4" android:layout_height="100dp">
                    <ImageButton
                            android:src="@drawable/flecha2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:id="@+id/imageBettunNutritionalTableLiMenuDay"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayoutExpandArea"
                    android:visibility="visible"
                    android:gravity="center">
                <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                />
                <TextView
                        android:text="MENÚ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView13"
                        android:gravity="center" android:textStyle="bold" android:textSize="12sp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp" android:gravity="center|left">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Segundo : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Segundo: Milanesa  jhbk jkh j jkh jkh @string/google_api_key  ug jhkj "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="14dp"
                            android:id="@+id/textViewSegundoLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Sopa : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/textView9"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Sopa: Sopa de Choro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="13dp"
                            android:id="@+id/textViewSoupLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Postre :  "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Postre: Gelatina"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="13dp"
                            android:id="@+id/textViewDessertLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Fruta : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Fruta: Manzana"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="13dp"
                            android:id="@+id/textViewFroutLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Infusión : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Agua: Anis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="13dp"
                            android:id="@+id/textViewInfusionLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp" android:layout_marginBottom="5dp">
                    <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:text="Adicional : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"/>
                    </TableRow>
                    <TextView
                            android:text="Adicional: Gelatina"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:textColor="@color/grayTextoMenu"
                            android:textSize="12dp"
                            android:id="@+id/textViewAditionalLiMenuDay"
                            android:fontFamily="sans-serif"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>